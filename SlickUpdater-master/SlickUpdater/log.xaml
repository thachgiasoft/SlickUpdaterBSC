<Window x:Class="SlickUpdater.log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="log" Height="480" Width="543" ResizeMode="NoResize" Background="{x:Null}">
    <Grid Margin="0,0,2,-18" Background="#FF323232">
        <TextBox x:Name="logwindow" HorizontalAlignment="Left" Height="408" TextWrapping="Wrap" Text="Slick Updater BETA v.X.x" VerticalAlignment="Top" Width="514" VerticalScrollBarVisibility="Visible" IsReadOnly="True"/>
        <Button x:Name="clear" Content="Clear" HorizontalAlignment="Left" Margin="80,408,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button x:Name="copy" Content="Copy to clipboard" HorizontalAlignment="Left" Margin="160,408,0,0" VerticalAlignment="Top" Width="113" Click="copy_Click"/>
        <Button x:Name="updatelog" Content="Update Log" HorizontalAlignment="Left" Margin="0,408,0,0" VerticalAlignment="Top" Width="75" Click="updatelog_Click"/>

    </Grid>
</Window>
