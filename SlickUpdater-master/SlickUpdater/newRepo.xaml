<Window x:Class="SlickUpdater.newRepo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create new repo" Height="135" Width="300" Background="#FF474747" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-3">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="Path/URL to repo" HorizontalAlignment="Left" Margin="15,5,0,35" Width="105"/>
        <TextBox x:Name="pathbox" HorizontalAlignment="Left" Height="23" Margin="135,5,0,0" VerticalAlignment="Top" Width="120" MaxLines="1" TextChanged="updatePath"/>
        <Button Content="..." HorizontalAlignment="Left" Margin="260,7,0,0" VerticalAlignment="Top" Width="20" Click="openFileBrowser" Height="18"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="17,36,0,0" VerticalAlignment="Top" Width="103"/>
        <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="23" Margin="135,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="updateName"/>
        <Button Content="Save" HorizontalAlignment="Left" Margin="20,67,0,0" VerticalAlignment="Top" Width="75" Click="save"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="105,67,0,0" VerticalAlignment="Top" Width="75" Click="cancel"/>

    </Grid>
</Window>
